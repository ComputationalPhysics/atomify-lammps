#/atom 1 oxygen
#/atom 2 nitrogen
#/bond 1 1 3.5

units real
dimension 3
boundary p p p
atom_style atomic
pair_style sw

timestep 10.0

read_data "methane_hydrate_SI_UA_charge.data"

variable confining_pressure equal 100
variable production_temperature equal 260
variable t_damp equal 100
variable p_damp equal 1000
variable n_thermalize equal 200

variable Nx equal 2
variable Ny equal 2
variable Nz equal 2
replicate ${Nx} ${Ny} ${Nz}

pair_coeff * * ../../potentialparameters/water_methane_hydrate.sw O C

group water	type 1
group methane type 2

fix npt all npt temp 260 260 ${t_damp} aniso ${confining_pressure} ${confining_pressure} ${p_damp}
#fix nvt all nvt temp 260 260 100
velocity all create $(1.8*v_production_temperature) 35134623 loop geom
